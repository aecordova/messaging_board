<%= content_for :section_header, "Message Detail" %>
<%= content_for :main_action do %>
    <%= link_to("Back to All Messages", posts_path, class: 'btn btn-outline-primary btn-sm rounded-pill') if user_signed_in? %> 
<% end %>

<%= tag.div do %>
  <%= tag.div do %>
    <%= tag.div class:"text-end text-secondary" do %>
        <%= tag.small "Created #{time_ago_in_words(@post.created_at)} ago by:", class: "fw-lighter" %>
        <%= tag.span(@post.author.username.capitalize) %> 
    <% end %>
    <%= tag.h5(@post.title)  %>
    <%= tag.div @post.body, class:"text-justify" %>
  <% end %>
 
  <%= tag.div class:"text-end mt-1" do %>
      <%= tag.button("Add Reply", class: 'btn btn-outline-primary btn-sm rounded-pill', data: { "bs-toggle": "collapse", "bs-target": "#new-comment-form-#{dom_id(@post)}"}, aria: {expanded: "false", controls:"new-comment-form" }) %> 
  <% end %>
  <hr>
   <%= render 'shared/comments_collapsable_form', post: @post %>
<% end %>

<%= tag.h3 "Comments:" %>
<%= render @post.comments.most_recent_first %>
