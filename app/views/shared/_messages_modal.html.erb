  <!-- Modal -->
<div class="modal fade" id="new-message-modal" tabindex="-1" aria-labelledby="new-message-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new-message-modal-label">New Message</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with model: Post.new, url: posts_path do |f| %>
        <div class="modal-body d-flex flex-column">
            <div class="mb-3 w-100">
              <%= f.label "Title", for: "message-title", class: "form-label" %>
              <%= f.text_field :title, id: "message-title", class: 'form-control' %>
            </div>
            <div class="mb-3 w-100">
              <%= f.label "Body", for: "message-body", class: "form-label" %>
              <%= f.text_area :body, id: "message-body", class: 'form-control' %>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Dismiss</button>

          <%= f.submit "Save", class:"btn btn-primary"  %>
        </div>
      <% end%>
    </div>
  </div>
</div>